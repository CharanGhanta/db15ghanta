extends layout

block content
 h1= title
 - let iphone  = results;
 div(class="container-fluid")
  div(class="row m-1")
   each item in iphone 
      - let destination = `dispatch(\"/iphone/update?id=${item._id}\")`
      div(class="row-sm-2", class="m-1") Item #{item.iphone_color}(#{item.iphonecost}) is #{item.iphonemodel}
      button.btn( class="btn-primary ml-1", onclick= destination) Update
      
 script.
  function dispatch(path){
    window.location.href=path
  }