extends layout

block content
  h1= title
  p Welcome to the iphone pug
  div(class="container-fluid")
        div(class="row")
            -
                let iphone = results
            each v,index in iphone
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.color}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.cost}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.model}
  script.                
    function buy(itemNo)
    {
        alert(`you purchased Item ${itemNo+1}`)
    }